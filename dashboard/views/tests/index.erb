<div class="page-header">
  <h1>Tests</h1>
  <p>Tests are elements or features that you can change or turn off.</p>
</div>

<style>
 th { padding: 10px; }
</style>

<% if @tests.any? %>
    <% @tests.each do |test| %>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><a href="<%= url(test.path) %>"><%= h test.name %></a></h3>
            </div>
            <table class="test-stats">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Participants</th>
                    <th>Finished</th>
                    <th>Probability B beats A</th>
                </tr>
                <tr>
                    <td><%= test.name %></td>
                    <td><%= test.description %></td>
                    <td><%= test.participant_count %></td>
                    <td><%= test.finisher_count %></td>
                    <td><%= (test.probability_b_greater_than_a.to_f * 100).round(2) %>%</td>
                </tr>
            </table>
        </div>
    <% end %>
<% else %>
    <div class="alert alert-danger">
        <strong>No tests!</strong> Something may be wrong or you may just need to define some tests.
    </div>
<% end %>
