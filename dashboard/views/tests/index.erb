<div class="page-header">
  <h1>Tests</h1>
</div>

<% if @tests.any? %>
  <ul class="list-group">
  <% @tests.each do |test| %>
  <li><a href="<%= url("tests/#{test.id}") %>"><%= test.name %></a></li>
  <% end %>
  </ul>
<% else %>
  <div class="alert alert-danger">
    <strong>No tests!</strong> Something may be wrong or you may just need to define some metrics.
  </div>
<% end %>
